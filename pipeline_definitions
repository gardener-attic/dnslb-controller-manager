dnslb-controller-manager:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: inject-branch-name
        inject_effective_version: true
      publish:
        dockerimages:
          controller-manager:
            inputs:
              repos:
                source: ~ # default
              steps:
                build: ~
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/dnslb-controller-manager'
            dockerfile: 'build/Dockerfile'
    steps:
      check:
        image: 'golang:1.10.2'
      test:
        image: 'golang:1.10.2'
      build:
        image: 'golang:1.10.2'
        output_dir: 'binary'
  variants:
    head-update:
      traits:
        component_descriptor: ~
    pull-request:
      traits:
        pull-request: ~
        component_descriptor: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        component_descriptor: ~
